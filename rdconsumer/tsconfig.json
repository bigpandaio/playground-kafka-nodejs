{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "baseUrl": "../rdconsumer/src",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "../rdconsumer/node_modules"
  ]
}